<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Carina.PixelViewer.Controls.ProcessingDialog"
				Classes="Dialog"
				SizeToContent="Height"
				Width="{StaticResource Double.ProcessingDialog.Width}">

	<Border Classes="Dialog">
		<Grid RowDefinitions="Auto,Auto,Auto">

			<!-- Message -->
			<TextBlock MaxLines="1" Text="{Binding $parent[Window].Message}" TextTrimming="CharacterEllipsis"/>

			<!-- Progress bar-->
			<ProgressBar Grid.Row="1" HorizontalAlignment="Stretch" IsIndeterminate="True" Margin="{StaticResource Thickness.ProcessingDialog.ProgressBar.Margin}"/>

			<!-- Padding-->
			<TextBlock Grid.Row="2" Text=" "/>
			
		</Grid>
	</Border>
	
</Window>
