<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:app="clr-namespace:Carina.PixelViewer"
        xmlns:appControls="clr-namespace:Carina.PixelViewer.Controls"
        xmlns:appViewModels="clr-namespace:Carina.PixelViewer.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Carina.PixelViewer.MainWindow"
        Icon="/Resources/AppIcon.ico"
		MinHeight="{DynamicResource Double/MainWindow.MinHeight}"
		MinWidth="{DynamicResource Double/MainWindow.MinWidth}">

	<!-- Data templates -->
	<Window.DataTemplates>
		<DataTemplate DataType="{x:Type appViewModels:Session}">
			<Grid Background="{x:Static Brushes.Transparent}" ColumnDefinitions="Auto,*,Auto" DragDrop.AllowDrop="True">
				<Panel Classes="TabItem_Icon">
					<DrawingPresenter Classes="Icon" Drawing="{DynamicResource Drawing/Icon.Tab}" IsVisible="{Binding !IsSourceFileOpened}"/>
					<Panel IsVisible="{Binding IsSourceFileOpened}">
						<DrawingPresenter Classes="Icon" Drawing="{DynamicResource Drawing/Icon.Image}" IsVisible="{Binding InsufficientMemoryForRenderedImage}"/>
						<DrawingPresenter Classes="Icon" Drawing="{DynamicResource Drawing/Icon.Image.Active}" IsVisible="{Binding !InsufficientMemoryForRenderedImage}"/>
					</Panel>
				</Panel>
				<TextBlock Classes="TabItem_TextBlock" Grid.Column="1" Text="{Binding Title}" ToolTip.Tip="{Binding SourceFileName}"/>
				<Button Classes="TabItem_Button" Command="{Binding $parent[Window].CloseMainTabItemCommand}" CommandParameter="{Binding $parent[TabItem]}" Grid.Column="2" ToolTip.Tip="{DynamicResource String/MainWindow.CloseSession}">
					<DrawingPresenter Classes="Icon" Drawing="{DynamicResource Drawing/Icon.Close}"/>
				</Button>
			</Grid>
		</DataTemplate>
	</Window.DataTemplates>

	<!-- Background -->
	<Window.Background>
		<SolidColorBrush Color="{DynamicResource Color/TabItem.Header.Background}" Opacity="{DynamicResource Double/MainWindow.Background.Opacity.SemiTransparent}"/>
	</Window.Background>

	<!-- Layout -->
	<TabControl x:Name="tabControl" Padding="0">

		<!-- New tab -->
		<TabItem Classes="Empty">
			<TabItem.Header>
				<Border Classes="AddTabItemButton" DragDrop.AllowDrop="True" ToolTip.Tip="{DynamicResource String/MainWindow.NewSession}">
					<DrawingPresenter Classes="Icon" Drawing="{DynamicResource Drawing/Icon.Add}"/>
				</Border>
			</TabItem.Header>
		</TabItem>

	</TabControl>
	
</Window>
